#Directory
IDIR =./

#Compiler
CC=icc
CUDA=nvcc

#Extensions
CC_EXT=c
CUDA_EXT=nvcc


#Files
CFLAGS=-I$(IDIR)
LIBS=-lm
MKL=-mkl=sequential
AVX=-xAVX
DEBUG=_PRINT_

$(IDIR)/%.x$(CC_EXT):	%.$(CC_EXT)
	$(CC) $(MKL) $(AVX) -o $@ $<

$(IDIR)/%.d$(CC_EXT):	%.$(CC_EXT)
	$(CC) -D$(DEBUG) $(MKL) $(AVX) -o $@ $<

.PHONY: clean
clean:
	rm -f *.x *.d *.data
